unborkRE = new RegExp (quotemeta uc for uc of rev).join('|'), 'g'
borkRE   = new RegExp(
  (ac for ac of chars).sort((a,b)->b.length-a.length).map(quotemeta).join('|')
  'g'
)

toASCII   = (str) -> str.replace unborkRE, ([c]) -> rev[c]
fromASCII = (str) ->
  str.replace borkRE, ([c]) ->
    chars[c][Math.floor(Math.random()*chars[c].length)]

module.exports = { toASCII, fromASCII }
